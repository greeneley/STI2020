		// UTILISATION LE POOL DE THREADS 
		Redacteur red4 = new Redacteur(4,r1, "thanhhai");
		Integer m = null; 
		
		ExecutorService pool = Executors.newFixedThreadPool(m);
		for(int i = 0 ; i < m; i++) {
			pool.submit(new Redacteur());
		}
		pool.submit(red1);
		pool.submit(red2);
		pool.submit(red3);
		pool.submit(red4);
		try {
			red1.start();
			red2.start();
			red3.start();
			red4.start();
		} catch (Exception e) {
            e.printStackTrace();
		}
		pool.shutdown();
		
